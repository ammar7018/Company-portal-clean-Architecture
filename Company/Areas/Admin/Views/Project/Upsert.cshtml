@model ProjectVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> @(Model.project.Id != 0 ? "Update" : "Create") Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="project.Id" hidden />

            <div class="row">

                <div class="col-12">
                    <div class="border p-3 mt-4">

                        <div class="form-floating py-2 col-12">
                            <input asp-for="project.Name" class="form-control border-0 shadow" />
                            <label asp-for="project.Name" class="ms-2"></label>
                            <span asp-validation-for="project.Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <textarea asp-for="project.Description" class="form-control border-0 shadow"></textarea>
                            <label asp-for="project.Description" class="ms-2"></label>
@*                             <span asp-validation-for="PhoneNumber" class="text-danger"></span>
 *@                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="project.Cost" class="form-control border-0 shadow" />
                            <label asp-for="project.Cost" class="ms-2"></label>
                            <span asp-validation-for="project.Cost" class="text-danger"></span>
                        </div>

                        <div class="form-label py-2 col-12">
                            <label asp-for="@Model.servicesID" class="ms-2">Services</label>
                            <select class="form-select" id="servicesSelect" asp-for="@Model.servicesID" asp-items="@Model.ServiceList" multiple>
                            </select>
                            <span asp-validation-for="@Model.servicesID" class="text-danger"></span>
                        </div>



                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (@Model.project.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Project" asp-action="Index" class="btn btn-outline-primary border  form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>

                </div>

            </div>



        </form>
    </div>
</div>



@section Scripts {

    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor charmap link lists wordcount linkchecker',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align lineheight | numlist bullist indent outdent | removeformat',
        });
    </script>

    <script>
        new MultiSelectTag('servicesSelect')  // id
    </script>


    @{
        <partial name="_ValidationScriptsPartial" />
    }

}
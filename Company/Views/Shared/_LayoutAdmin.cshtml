</head>
<body>
    	<!-- SIDEBAR -->
	<section id="sidebar">
		<a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="brand">
			<i class='bx bxs-smile'></i>
			<span class="text">Tatweer</span>
		</a>
		<ul class="side-menu top">
			<li class="active">
				<a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
					<i class='bx bxs-dashboard'></i>
					<span class="text">Dashboard</span>
				</a>
			</li>
			<li>
				<a asp-area="Admin" asp-controller="Project" asp-action="Index">
					<i class='bx bxs-shopping-bag-alt'></i>
					<span class="text">Projects</span>
				</a>
			</li>
			<li>
				<a asp-area="Admin" asp-controller="Service" asp-action="Index">
					<i class='bx bxs-doughnut-chart'></i>
					<span class="text">Service</span>
				</a>
			</li>
@* 			<li>
				<a href="#">
					<i class='bx bxs-message-dots'></i>
					<span class="text">Message</span>
				</a>
			</li>
			<li>
				<a href="#">
					<i class='bx bxs-group'></i>
					<span class="text">Team</span>
				</a>
			</li>
 *@		</ul>
		<ul class="side-menu">
			<li>
				<a asp-area="Admin" asp-controller="Account" asp-action="Register">
					<i class='bx bxs-cog'></i>
					<span class="text">Add user</span>
				</a>
			</li>
			<li>
				<a asp-area="Admin" asp-controller="Account" asp-action="logout" class="logout">
					<i class='bx bxs-log-out-circle'></i>
					<span class="text">Logout</span>
				</a>
			</li>
		</ul>
	</section>
	<!-- SIDEBAR -->
	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
			<i class='bx bx-menu'></i>
			<a href="#" class="nav-link">Categories</a>
			<form action="#">
				<div class="form-input">
					<input type="search" placeholder="Search...">
					<button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
				</div>
			</form>
			<input type="checkbox" id="switch-mode" hid	den>
			<label for="switch-mode" class="switch-mode"></label>
			<a href="#" class="notification">
				<i class='bx bxs-bell'></i>
				<span class="num">8</span>
			</a>
			<a asp-area="Admin" asp-controller="Account" asp-action="Login" class="profile">
				<img src="~/img/users/user1.jpg">
				<span class="text">Hello @UserManager.GetUserName(User)<</span>
			</a>
		</nav>
		<!-- NAVBAR -->
		<!-- MAIN -->
		<!-- MAIN -->
		<div class="container-fluid">
			<main role="main" class="pb-3">
				<partial name="_Notification" />
				@RenderBody()
			</main>
		</div>

    </section>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Tatweer-Portal</title>
    <link href="~/css/bootstrap.min (4).css" rel="stylesheet" />
